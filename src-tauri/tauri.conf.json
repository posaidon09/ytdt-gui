{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "ytdt-gui",
	"version": "0.1.0",
	"identifier": "com.ytdt-gui.app",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "YTDT",
				"width": 1200,
				"height": 600,
				"maximized": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"externalBin": ["binaries/script"],
        "resources": ["icons/icon.png"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
